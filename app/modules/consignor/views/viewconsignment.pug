		script.
			$(document).ready(function(){
				$('#consignmentTable').dataTable();

				$(document).on('click', '.remove', function(){
					var $this = $(this);
					var consignmentid = $this.attr('consignmentid');

					swal({
						title: 'Delete this consignment?',
						text: 'Are you sure to delete this consignment? This action cannot be undone.',
						icon: 'warning',
						buttons:{
							No: 'No',
							Yes: 'Yes',
						}
					}).then((value) => {
						if(value == 'Yes'){
							$.post('/consignorhome/delete/consignment', {
								consignmentid: consignmentid,
							}).then(function(data){
								//alert(data.indicator)
								if(data.indicator){
									toastr.success("You have successfully deleted a consignment","Yey!",{
									showMethod:"slideDown",
									hideMethod:"slideUp",
									positionClass:"toast-bottom-right",
									timeOut:5000})

									var table = $('#consignmentTable').DataTable();
									table.row( $this.parents('tr') )
										.remove()
										.draw();
								}
							})
						}
					})
				})

				$(document).on('click', '#createConsignment', function(){
					$('.app-content.content').fadeOut(1000, function(){
						location.href = '/consignorhome/consignment/create'
					})
					$('footer').fadeOut(1000)
				})
				var scanner = new Instascan.Scanner({ video: document.getElementById('qrscanner') });
				scanner.addListener('scan', function (content, image) {
					console.log(content);
				});
			
				$('#addAssetModal2').on('hide.bs.modal', function () {
					scanner.stop();
				});				

				$('#addAssetModal2').on('shown.bs.modal', function () {
					Instascan.Camera.getCameras().then(function (cameras) {
						if (cameras.length > 0) {
							scanner.start(cameras[0]);
						}
					});
				})
			})
	